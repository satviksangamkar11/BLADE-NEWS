# Telegram API Configuration
# Get these from https://my.telegram.org
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash

# MongoDB Atlas Configuration
# Get connection string from MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DATABASE_NAME=blade_news

# MongoDB Collection Names
COLLECTION_CONTENT=content_items
COLLECTION_METADATA=scraper_metadata
COLLECTION_CACHE=duplicate_cache

# Google Gemini AI Configuration
# Get API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# Telegram Bot Configuration
# Get bot token from @BotFather
BOT_TOKEN=your_bot_token
CHANNEL_USERNAME=@YourChannelUsername

# Channels to Scrape (JSON array format)
CHANNEL_USERNAMES=["@channel1", "@channel2", "@channel3"]

# Batch Processing Configuration
BATCH_SIZE=8
CONCURRENT_API_CALLS=4
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Scraping Configuration
INITIAL_SCRAPE_HOURS=1
REAL_TIME_INTERVAL_MINUTES=30

# Duplicate Detection Configuration
DUPLICATE_THRESHOLD=0.70
MAX_COMPARISON_NEWS=200
SIMILARITY_THRESHOLD=0.75
DUPLICATE_CACHE_TTL=36000
RATE_LIMIT_CACHE_TTL=30

# Session Configuration
SESSION_FILE=telegram_session.txt

# Bot Posting Configuration
BOT_SEND_INTERVAL_MINUTES=2
BOT_MAX_MESSAGES_PER_MINUTE=20
